		<wait value="10"/>
		<angle who="zildo" value="3"/>
		<wait value="20"/>
		<angle who="zildo" value="1"/>
		<wait value="30"/>
		<moveTo who="zildo" pos="316,119" unblock="true"/>
		<wait value="60"/>
